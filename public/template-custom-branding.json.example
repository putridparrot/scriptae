{
  "site": {
    "title": "My Awesome Blog",
    "description": "Sharing my thoughts on technology and life",
    "tagline": "Code. Learn. Share.",
    "footer": "© 2025 My Awesome Blog. Built with scriptae.",
    "siteTitle": "My Awesome Blog - Tech & Life",
    "logoPath": "/custom-logo.svg"
  },
  "content": {
    "source": "local"
  },
  "theme": {
    "colors": {
      "primary": "#667eea",
      "secondary": "#764ba2",
      "accent": "#3498db",
      "accentHover": "#2980b9",
      "text": "#2c3e50",
      "textLight": "#7f8c8d",
      "background": "#ffffff",
      "headerText": "#ffffff",
      "border": "#ddd",
      "draft": "#e74c3c"
    },
    "fonts": {
      "primary": "-apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, 'Helvetica Neue', Arial, sans-serif",
      "headings": "-apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, 'Helvetica Neue', Arial, sans-serif",
      "code": "Consolas, Monaco, 'Courier New', monospace"
    },
    "spacing": {
      "headerPadding": "60px 20px 40px",
      "contentMaxWidth": "800px",
      "postSpacing": "40px"
    },
    "borderRadius": "8px",
    "headerGradient": "linear-gradient(135deg, #667eea 0%, #764ba2 100%)"
  },
  "layout": {
    "home": {
      "showPostCount": true,
      "showControls": true,
      "defaultPostsToShow": 5,
      "dateFormat": "short"
    },
    "post": {
      "showDate": true,
      "showAuthor": true,
      "dateFormat": "long"
    },
    "postList": {
      "showExcerpt": true,
      "showAuthor": true,
      "showDraftIndicator": true,
      "draftIndicatorText": "[Draft]",
      "readMoreText": "Read more →"
    }
  },
  "text": {
    "loading": "Loading...",
    "loadingPost": "Loading post...",
    "noPostsFound": "No posts found.",
    "postNotFound": "Post not found.",
    "errorLoading": "Error loading content.",
    "showingPosts": "Showing {count} of {total} posts",
    "postsToShowLabel": "Posts to show:",
    "showAllButton": "Show All Posts",
    "showLessButton": "Show Less",
    "newerPostsButton": "← Newer Posts",
    "olderPostsButton": "Older Posts →"
  }
}
